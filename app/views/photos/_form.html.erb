<%= form_for @photo do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :album %>
  <%= f.select(:album, albums_for_select) %>
  <%= f.file_field :image %>
  <br>
  <% if @photo.image %>
    <%= image_tag @photo.image.url %>
  <% end %>
  <%= f.submit %>

<% end %>
<%= button_to("Delete Photo", photo_path(@photo), method: :delete, confirm: "Are you sure?") if @photo.id %>


<%= form_for @album do |f| =%>
<form>
  <p>
    <%= f.label :name =%>
    <%= f.text_field :name =%>
  </p>

  <p>
    <%= f.label :description =%>
    <%= f.text_area :description =%>
  </p>

  <%= f.file_field :image %>
  <br>
  <% if @album.image %>
    <%= image_tag @album.image.url %>
  <% end %>
  
  <button>
    <%= f.submit =%>
  </button>
</form>

<% end %>